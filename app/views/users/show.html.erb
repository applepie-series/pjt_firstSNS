<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="follow_button_container">
        <%= render 'follow_form' if logged_in? %>
      </div>
      <%# 相互フォローの場合のみトークリンク表示 %>
      <% unless @user.id == current_user.id %>
        <% if current_user.following?(@user) && @user.following?(current_user) %>
        <% if @isRoom == true %>
          <p class="user-show-room"><%= link_to "メッセージを送る", @RoomPresent, class: "btn btn-primary btn-lg" %>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.submit "メッセージを送る", class: "btn btn-primary btn-md user-show-chat" %>
          <% end %>
        <% end %>
        <% end %>
      <% end %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-10 row">
    <% if @user.microposts.any? %>
      <h3><%= @user.name %>の投稿 (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>