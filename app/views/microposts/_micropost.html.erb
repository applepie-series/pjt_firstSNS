<li class="col-md-5 micropost-container" id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 35), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <h2><%= micropost.content %></h2>
    <% if micropost.images.attached? %>
      <% micropost.images.each do |image| %>
        <%= link_to image, 'data-lightbox': image do%>
          <%= image_tag image.variant(combine_options:{resize:"300x300^",crop:"300x300+0+0",gravity: :center}).processed %>
        <%end%>
      <%end%>
    <% end %>
  </span>
  <% if logged_in? %>
    <%= render "likes/like", micropost: micropost %>
    <%= link_to "トーク", show_room_path %>
    <%= render "comments/comment", micropost: micropost%>
    <%= render "comments/form", micropost: micropost %>
  <% end %>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %> 前に投稿
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                      data: { confirm: "投稿を削除します。よろしいですか？" } %>
    <% end %>
  </span>
</li>